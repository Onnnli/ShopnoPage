                                    form
                                        .form-group
                                            label.col-form-label(for='recipient-name') Recipient:
                                            input#recipient-name.form-control(type='text' placeholder='SHOPNO')
                                        .form-group
                                            label.col-form-label(for='message-text') Message:
                                            textarea#message-text.form-control(placeholder="MESSAGE")
                                .modal-footer
                                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
